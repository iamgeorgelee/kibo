<% include header %>

<div class="container" role="main">

    <div class="col-sm-6 col-sm-offset-3">
        <h1>*[Note from Vince] This for is used for people register with Facebook and now wants to link to a local account, but they dont have one so they needs to do the signup.</h1>


    	<h1><span class="fa fa-sign-in"></span> Add Local Account</h1>

    	<!-- show any messages that come back with authentication -->
    	<% if (message.length > 0) { %>
    		<div class="alert alert-danger"><%= message %></div>
    	<% } %>

    	<!-- LOGIN FORM -->
    	<form action="/connect/local" method="post">
    		<div class="form-group">
    			<label>Username</label>
    			<input type="text" class="form-control" name="username">
    		</div>
    		<div class="form-group">
    			<label>Password</label>
    			<input type="password" class="form-control" name="password">
    		</div>

    		<button type="submit" class="btn btn-warning btn-lg">Add Local</button>
    	</form>
    	<hr>
    	<p><a href="/profile">Go back to profile</a></p>
    </div>
</div>

<% include footer %>